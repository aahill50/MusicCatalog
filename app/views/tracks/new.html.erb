<h1>Submit a new track</h1>

<form action="<%= tracks_url %>" method="POST">
  <%= render "shared/form_auth" %>

  <label for="track_album_id">Album</label>
  <select name="track[album_id]">
    <% Album.all.each do |album| %>
      <option value=<%= album.id %>
        <%= "selected=selected".html_safe if @track.album == album %>>
        <%= album.name %>
      </option>
    <% end %>
  </select>

  <br>
  <label for="track_name">Track Name</label>
  <input type="text" name="track[name]" id="track_name">
  <br>

  <input type="submit" value="Submit Track">
</form>